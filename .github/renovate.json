{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base", ":disableDependencyDashboard"],

  "assignees": ["jdno"],
  "reviewers": ["jdno"],

  "labels": ["C-dependency"],
  "semanticCommits": "disabled",

  "pre-commit": {
    "enabled": true
  },

  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["^[\\w]+/*.yml$"],
      "matchStrings": ["uses: (?<depName>.*?)@(?<currentValue>.*?)$"],
      "datasourceTemplate": "github-releases"
    }
  ]
}
